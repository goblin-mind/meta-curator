{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "jsx": "react",
    "removeComments": true,
    "lib": ["es6", "dom", "esnext"],
    "resolveJsonModule": true,
    "types": ["node", "electron", "jest", "webpack", "webpack-env", "@testing-library/jest-dom", "offscreencanvas"],
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "baseUrl": "./src",
    "paths": {
      "rtl": ["utils/test/rtl"],
      "$src/*": ["./*"]
    }    
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
}
